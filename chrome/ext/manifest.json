{
  "name": "UnorderedList",
  "description": "UnorderedList Chrome Extension",
  "homepage_url": "http://unorderedlist.net",
  "version": "0.0.5",
  "manifest_version": 2,
  "permissions": [
    "tabs",
    "storage",
    "activeTab",
    "clipboardRead",
    "clipboardWrite",
    "http://*/*",
    "https://*/*"
  ],
  "externally_connectable": {
    "ids": ["jehhmlpdedncbbemoncbfabfaongchma"],
    "matches": ["*://unorderedlist.net/*"]
  },
  "options_page": "options.html",
  "browser_action": {
    "default_icon": "icon32.png",
    "default_title": "UnorderedList",
    "default_popup": "action.html"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "commands": {
    "paste": {
      "description": "Paste List Item",
      "suggested_key": {
        "default": "Alt+Shift+V",
        "mac": "Alt+Shift+V"
      }
    },
    "copy": {
      "description": "Copy List Item",
      "suggested_key": {
        "default": "Alt+Shift+C",
        "mac": "Alt+Shift+C"
      }
    }
  }
}
